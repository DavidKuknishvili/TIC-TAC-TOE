<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:background="#000818">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/normal"
            android:gravity="center"
            android:text="თამაშის წესები"
            android:textColor="#D7D7D7"
            android:layout_marginBottom="50dp"
            android:textSize="35dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/normal"
            android:gravity="center"
            android:text="აირჩიეთ ერთ-ერთი ნიშანი და მოათავსე შესაბამის ადგილას ისე რომ თქვენს მიერ ჩასმული სიმბოები იყოს დიაგონალურად, ჰორიზონტალურად ან ვერდიკალურად.  "
            android:textColor="#D7D7D7"
            android:textSize="23dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/dark_x" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/dark_o" />
        </LinearLayout>

        <Button
            android:id="@+id/returnHomePage"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:background="@drawable/shape"
            android:text="მთავარ მენიუში დაბრუნება"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>